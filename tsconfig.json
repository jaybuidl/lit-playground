{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "build",
    "dist",
    "lib",
    "node_modules",
    "scripts",
    "webpack"
  ]
}
